@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Everything can be simple</h1>
</div>

<div class="card-columns">
    @foreach (var product in Model.Products)
    {
    <div class="card">
        <div class="card-img" style="background-image: url('@product.Image')"></div>                
        <div class="card-body">
            <h5 class="card-title">Maker: @product.Maker</h5>
            <p>@product.Title</p>
        </div>
    </div>
    }
</div>


